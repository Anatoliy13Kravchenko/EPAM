{
  "extends": [
    "tslint-react",
    "tslint-config-airbnb"
  ],
  "rules": {
    "variable-name": false,
    "brace-style": ["stroustrup"],
    "no-boolean-literal-compare": false,
    "switch-default": true,
    "no-switch-case-fall-through": true,
    "no-duplicate-imports": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-parameter-reassignment": false,
    "no-consecutive-blank-lines": false,
    "one-variable-per-declaration": false,
    "no-increment-decrement": false,
    "indent": [true, "spaces", 4],
    "ter-indent": [false, 4],
    "prefer-const": [true, {"destructuring": "all"}],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "never",
          "functions": "never",
          "typeLiterals": "ignore"
        }
      }
    ],
    "max-line-length": [false],
    "jsx-no-multiline-js": false,
    "import-name": false,
    "align": false,
    "jsx-no-lambda": false,
    "jsx-self-close": false,
    "jsx-alignment": false,
    "semicolon": [true, "always", "ignore-bound-class-methods"],
    "no-console": {
      "severity": "warning",
      "options": [
        "debug",
        "info",
        "log",
        "time",
        "timeEnd",
        "trace"
      ]
    },
    "completed-docs": [true, {
      "classes": {"visibilities": "all", "tags": {"content": {"see": ".*"}, "existence": "class"} },
      "interfaces": {"visibilities": "all", "tags": {"content": {"see": ".*"}, "existence": "interface"}},
      "namespaces": {"visibilities": "all", "tags": {"content": {"see": ".*"}, "existence": ["namespace", "global"]}},
      "functions": {"visibilities": "all", "tags": {"content": {"see": ".*"}, "existence": ["param", "return", "inheritDoc"]}},
      "types": {"visibilities": "all", "tags": {"content": {"see": ".*"}, "existence": ["type"]}},
      "properties": {"locations": "instance", "privacies": "all", "tags": {"content": {"see": ".*"}, "existence": ["param", "inheritDoc", "type", "return"]}},
      "variables": {"visibilities": "all", "tags": {"content": {"see": ".*"}, "existence": ["type", "param", "return"]}}
    }]
  }
}
